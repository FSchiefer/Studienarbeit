<s:ScatterViewItem x:Class="StudienarbeitsProjekt.ContentControls.ScatterOrientationControl"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:s="http://schemas.microsoft.com/surface/2008" Padding="0">

    <Grid Background="BlueViolet"  >



        <StackPanel
            HorizontalAlignment="Center" VerticalAlignment="Center" >
            <s:SurfaceCheckBox Foreground="White"  x:Name="FreieOrientierung" Checked="FreieOrientierung_Checked" Unchecked="FreieOrientierung_Unchecked">
                <TextBlock TextWrapping="Wrap" FontStretch="Expanded" >
                Freie Orientierung
                </TextBlock>
            </s:SurfaceCheckBox>
            <s:SurfaceCheckBox Foreground="White" x:Name="Positionierung" Checked="Positionierung_Checked" Unchecked="Positionierung_Unchecked">
                <TextBlock TextWrapping="Wrap" FontStretch="Expanded" >
                Positionierung an Rand
                </TextBlock>
            </s:SurfaceCheckBox>
        </StackPanel>
    </Grid>
</s:ScatterViewItem>
