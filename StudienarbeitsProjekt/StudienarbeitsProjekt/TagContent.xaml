<s:TagVisualization x:Class="StudienarbeitsProjekt.TagContent" x:Name="root"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:s="http://schemas.microsoft.com/surface/2008"
    xmlns:StudienarbeitsProjekt ="clr-namespace:StudienarbeitsProjekt"
    OrientationOffsetFromTag="0"
   >

    
    <s:ScatterView  x:Name="mainView" ItemsSource="{Binding Elements, ElementName=root}">
        <s:ScatterView.ItemContainerStyle >
            <Style TargetType="{x:Type s:ScatterViewItem}">
                <Setter Property="BorderBrush" Value="Blue" />
                <Setter Property="BorderThickness" Value="3"/>
            </Style>
        </s:ScatterView.ItemContainerStyle>
    
    </s:ScatterView>
   
</s:TagVisualization>