<s:TagVisualization x:Class="StudienarbeitsProjekt.TagContent" x:Name="root"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:s="http://schemas.microsoft.com/surface/2008"
   xmlns:c="clr-namespace:StudienarbeitsProjekt.ContentControls"
    xmlns:StudienarbeitsProjekt ="clr-namespace:StudienarbeitsProjekt"
 Moved="startVisualizer_VisualizationMoved"
   >
    <Canvas >
        
        <Ellipse 
     
      Height="300"
      Width="300"
       Canvas.Left="-150"
            Canvas.Top="-150"
            
    >
            <Ellipse.Fill>
                <RadialGradientBrush>
                    <RadialGradientBrush.GradientStops>
                      
                        <GradientStop Color="LightGray" Offset="0.0"></GradientStop>
                        <GradientStop  x:Name="Circle" Offset="1"></GradientStop>
                        
                        
                    </RadialGradientBrush.GradientStops>
                </RadialGradientBrush>
            </Ellipse.Fill>

        </Ellipse>
        <Label x:Name="Message" Canvas.Left="-200" Canvas.Top="150"
            > </Label>
    </Canvas>





</s:TagVisualization>