<s:SurfaceWindow x:Class="StudienarbeitsProjekt.SurfaceWindow1"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:s="http://schemas.microsoft.com/surface/2008"
    Title="StudienarbeitsProjekt"
    >
  <Grid Name="Host" Background="CadetBlue" Width="200" Height="200" 
      PreviewTouchDown="Grid_PreviewTouchDown" >
        
        <s:SurfaceSlider VerticalAlignment="Center" HorizontalAlignment="Stretch" Width=" 400"/>
        <Label Name="helloWorldLabel"
               Visibility="Hidden"
               Foreground="Black"
               HorizontalAlignment="Left"
               VerticalAlignment="Top">
            
            Hello, World again.
            
        </Label>

        <s:ScatterView HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
            <s:ScatterViewItem Height="100" Width="200">

                <s:ElementMenu VerticalAlignment="Top" HorizontalAlignment="Center" ActivationHost="{Binding ElementName=Host}" Margin="0,-50,0,0">
                <s:ElementMenuItem Header="Remove Me" Click="PhotoRemoveClicked" />
                </s:ElementMenu>
            </s:ScatterViewItem>
        </s:ScatterView>

    </Grid>
    
 
</s:SurfaceWindow>
