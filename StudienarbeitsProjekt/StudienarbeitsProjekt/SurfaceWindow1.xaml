<s:SurfaceWindow x:Class="StudienarbeitsProjekt.SurfaceWindow1"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:s="http://schemas.microsoft.com/surface/2008"
    Title="StudienarbeitsProjekt"
    >
  <Grid Name="Host" Background="CadetBlue" Width="200" Height="200" 
      PreviewTouchDown="Grid_PreviewTouchDown" >
        <s:ElementMenu VerticalAlignment="Top" HorizontalAlignment="Center" ActivationHost="{Binding ElementName=Host}" Margin="0,-50,0,0">
            <s:ElementMenuItem Header="Remove Me" Click="PhotoRemoveClicked" />
        </s:ElementMenu>
            <Label Name="helloWorldLabel"
               Visibility="Hidden"
               Foreground="Black"
               HorizontalAlignment="Left"
               VerticalAlignment="Top">
            
            Hello, World again.
            
        </Label>
    </Grid>
    
</s:SurfaceWindow>
